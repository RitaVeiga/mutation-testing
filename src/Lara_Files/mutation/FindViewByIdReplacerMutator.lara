import lara.mutation.Mutator;
import kadabra.KadabraNodes;
import weaver.WeaverJps;
import weaver.Weaver;

var FindViewByIdReplacerMutator = function($result, $original) {
    // Parent constructor
    Mutator.call(this);

    this.$expr = $result;

    this.mutationPoints = [];

    for(var $call of WeaverJps.search('call').get()) {
        if($call.toString().includes("findViewById"))
            this.mutationPoints.push($call);
    }

    this.currentIndex = 0;
    this.mutationPoint = undefined;
    this.previousValue = undefined;

};

// Inheritance
FindViewByIdReplacerMutator.prototype = Object.create(Mutator.prototype);

FindViewByIdReplacerMutator._isCompatible = function(type1, type2) {
    return type1 === type2;
}

/*** IMPLEMENTATION OF INSTANCE METHODS ***/
FindViewByIdReplacerMutator.prototype.hasMutations = function() {
    return this.currentIndex < this.mutationPoints.length;
}

FindViewByIdReplacerMutator.prototype.getMutationPoint = function() {
    if (this.isMutated) {
        return this.mutationPoint;
    } else {
        if (this.currentIndex < this.mutationPoints.length) {
            return this.mutationPoints[this.currentIndex];
        } else {
            return undefined;
        }
    }
}

FindViewByIdReplacerMutator.prototype._mutatePrivate = function() {

    this.mutationPoint = this.mutationPoints[this.currentIndex];
    this.currentIndex++;

    this.previousValue = this.mutationPoint.copy;
    this.mutationPoint = this.mutationPoint.insertReplace("null");

    println("/*--------------------------------------*/");
    println("Mutating operator n." + this.currentIndex + ": " + this.previousValue + " to " + this.mutationPoint);
    println("/*--------------------------------------*/");

}

FindViewByIdReplacerMutator.prototype._restorePrivate = function() {
    // Restore operator
    println("Restoring: " + this.mutationPoint + " to " + this.previousValue);
    this.mutationPoint.insertReplace(this.previousValue);
    this.previousValue = undefined;
    this.mutationPoint = undefined;
}